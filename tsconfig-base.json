{
    "compilerOptions": {
        /* Basic Options */
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        // "declarationMap": true,   
        "sourceMap": true,
        "removeComments": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "esModuleInterop": true
    }
}